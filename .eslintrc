{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "max-len": 0,
    "arrow-body-style": 0,
    "no-nested-ternary": 0,
    "global-require": 0,
    "consistent-return": 0,
    "no-param-reassign": [2, { "props": false }],
    "comma-dangle": [2, "never"],
    "curly": [2, "multi-line"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "eqeqeq": [2, "smart"],
    "object-curly-spacing": [2, "never"],
    "space-before-function-paren": [2, "never"],
    "arrow-parens": ["error", "as-needed"],
    "no-mixed-operators": 0,
    "object-property-newline": 0,

    "import/prefer-default-export": 0,
    "import/no-named-as-default": 0,
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "import/first": 0, // useful, but we use css modules

    "react/jsx-indent": 0, // untill rule becomes more flexible https://github.com/yannickcr/eslint-plugin-react/issues/540
    "react/jsx-space-before-closing": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-closing-bracket-location": [2, {
      "nonEmpty": "after-props",
      "selfClosing": "tag-aligned"
    }],
    "react/no-unused-prop-types": 0,
    "react/jsx-filename-extension": [0, { "extensions": [".js", ".jsx"] }],
    "react/forbid-prop-types": 0, // maybe useful (by default `object`, `array`)
    "react/style-prop-object": 0,
    "react/no-danger": 0,

    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/label-has-for": 0
  },
  "globals": {
    "after": false,
    "afterEach": false,
    "before": false,
    "beforeEach": false,
    "describe": false,
    "it": false,
    "require": false,
    "process": false,
    "browser": false
  }
}
